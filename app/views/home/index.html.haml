.container-fluid.home
  #galleria{style: "margin-left:auto; margin-right:auto; max-width:100%;"}
    - @pictures.each do |picture|
      = cl_image_tag picture.cloudinary_public_id, {style: "max-width:100%"}
  %script{:src => 'galleria.classic.js'}
  :javascript
    Galleria.configure({
                        debug: false,
                        autoplay: 2000,
                        fullscreenDoubleTap: true,
                        showCounter: false,
                        showImagenav: false,
                        showInfo: false,
                        thumbDisplayOrder: false,
                        thumbnails: false,
                        transition: 'fade',
                        transitionSpeed: 3000,
                        trueFullscreen: true
                       });
    Galleria.run('#galleria');
