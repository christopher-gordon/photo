%ul.nav.nav-list#filters{style: "margin-left:auto;margin-right:auto;"}
  %li.nav-header
    %h5{:style => 'font-weight:normal;text-shadow:none;'}
      VOLUMES
  - @volumes.reverse.each do |volume|
    %li.volume-list-item
      = link_to(volume.name.titleize, blog_path(:volume => volume.id), :onClick => "window.location.href=\"#{blog_url(:volume => volume.id)}\";")

