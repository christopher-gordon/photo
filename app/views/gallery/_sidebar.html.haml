%ul.nav.nav-list
  %li.nav-header
    %h5{:style => 'font-weight:normal;text-shadow:none;'}
      ALBUMS
  %li.inactive
    =link_to "All", gallery_index_url
  -@albums.each do |album|
    %li{:class => (params[:album] == album.name ? "active" : "inactive")}
      =link_to "#{album.name.titleize}", gallery_index_url(:album => album.name)
