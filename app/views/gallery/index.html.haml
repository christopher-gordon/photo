.container-fluid
  .row-fluid
    .span2.album-list
    .span10
      %script{:src => 'assets/isotope.pkgd.min.js'}
      =# render 'gallery/sidebar'
      - if @album.nil?
        .photo-gallery
          - @albums.each do |album|
            - album.pictures.each do |picture|
              .photo{:class => album.name.downcase.strip.gsub(' ', '-')}
                = image_tag picture.filename
