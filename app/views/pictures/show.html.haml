.row-fluid
  %script{src: 'galleria.classic.js'}
  .span2#back-to-gallery{style: "margin: 0px"}
    %br
    %br
    = link_to "Back to #{@album.name} album", gallery_index_path, :style => 'color:lightgrey;margin-left:15%;font-size:16px;text-decoration:underline;'

  .span8{style: "margin: 0px"}
    .center
      = cl_image_tag @picture.cloudinary_public_id, {:style=>"max-width:800px;max-height:700px;"}

      -#TODO -style description, color
      .light-grey
        %br
        %h4= @picture.title
        %h6= @picture.description

  .span2.light-grey#album-info{style: "margin: 0px; text-align: center;"}
    %br
    %br
    %h3= "Album: #{@picture.album.name}"
    %h5= "#{index_within_album(@picture)} of #{@album.pictures.size}"
    - unless first_picture?
      = link_to 'Previous', picture_path(previous_picture), :style => 'color:lightgrey;font-size:16px;text-decoration:underline;'
    - if display_hashmark?
      %span= "|"
    - unless last_picture?
      = link_to 'Next', picture_path(next_picture), :style => 'color:lightgrey;font-size:16px;text-decoration:underline;'
