.row-fluid
  %script{src: 'galleria.classic.js'}
  .row
    .span1
    .span6{style: "margin: 0px; min-width: 200px"}
      .center
        = cl_image_tag(@picture.cloudinary_public_id, transformation: 'individual_picture_90', style: "max-width:100%;max-height:700px;min-width:200px")

        -#TODO -style description, color
        .light-grey
          %br
          %h3= @picture.title
          %h5= @picture.description

    .span5.light-grey#album-info{style: "margin-top: 0px; margin-bottom: 0px; text-align: center; min-width: 150px;"}
      %br
      %br
      %h4= "Album:"
      %h3= @picture.album.name
      %h5= "#{index_within_album(@picture)} of #{@album.pictures.size}"
      - unless first_picture?
        = link_to 'Previous', picture_path(previous_picture), :style => 'color:lightgrey;font-size:16px;text-decoration:underline;'
      - if display_hashmark?
        %span= "|"
      - unless last_picture?
        = link_to 'Next', picture_path(next_picture), :style => 'color:lightgrey;font-size:16px;text-decoration:underline;'

      #back-to-gallery{style: "margin-left:auto;margin-right:auto; margin-bottom: 50px; min-width:225px; max-width:100%; text-align:center;"}
        %br
        %br
        = link_to back_to_gallery_or_album_copy, (@album.name.downcase == 'frames' ? framing_path : gallery_index_path), :style => 'color:lightgrey;margin-left:0px;font-size:16px;text-decoration:underline;'

      %br
      %hr
      %br
      %h6 Images are displayed in lower resolution for ease of viewing on your computer. Actual prints will be of the highest quality.
      %h6 Please note that color calibration varies from monitor to monitor. Final product may appear slightly different than what you see on your computer.
